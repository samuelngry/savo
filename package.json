{
  "name": "savo",
  "version": "1.0.0",
  "scripts": {
    "dev:db": "cd docker && docker-compose up -d",
    "dev:backend": "cd backend && ./mvnw spring-boot:run",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:db\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "stop:db": "cd docker && docker-compose down",
    "clean": "cd docker && docker-compose down -v"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
